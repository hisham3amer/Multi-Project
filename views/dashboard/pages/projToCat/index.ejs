<%- include('../../partials/headerLayout.ejs', {pageName: "projToCat", pageTitle: "Project to Cat", pathLevel: "/"}) %>

<br>
<div class="btn-group ms-4">
    <a href="/dashboard/projToCat/createForm" class="btn btn-primary btn-sm">+ New Relationship</a>
</div>
<br><br>
<%if(prjcats.length > 0){%>
    <div class="table-responsive mx-4">
        <table class="table table-striped table-sm text-center">
            <thead>
                <tr>
                    <th scope="col">Project Title</th>
                    <th scope="col">Category Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% prjcats.forEach(prjcat=> { %>
                        <tr class="align-middle">
                                <td>
                                    <%= prjcat.title %>
                                </td>
                                <td>
                                    <%= prjcat.catName %>
                                </td>
                                <td>
                                    <div class="d-flex flex-row justify-content-center gap-2">
                                        <a href="/dashboard/projToCat/updateForm/<%=prjcat.relId%>" type="button"
                                            class="btn btn-warning btn-small">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form action="" method="POST"
                                            class="position-relative">
                                            <button type="button" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal_<%= prjcat.relId %>" class="btn btn-danger btn-small">
                                                <i class="bi bi-trash-fill"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                        </tr>
                        <div class="modal fade" tabindex="-1" role="dialog" id="deleteModal_<%= prjcat.relId %>">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <div class="modal-title">You are about to remove a Relationship.</div>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p>
                                            This will remove the relationship of <b class="fw-bold">
                                                <%= prjcat.title %>
                                            </b><br />
                                            Are you sure?
                                        </p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <form action="/dashboard/projToCat/destroy/<%=prjcat.relId%>?_method=DELETE" method="POST" class="position-relative">
                                            <button type="submit" class="btn btn-primary">Yes, Remove Relationship</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                            </tbody>
                            </table>
                            </div>
                
                            <%} else {%>
                                <h3>No products created yet !!!!</h3>
                                <%}%>


<%- include('../../partials/footerLayout.ejs', { pathLevel: "/" }) %>